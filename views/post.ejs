<%- include("partials/Header.ejs")  %>

<!-- Create Post Section -->
<section class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-lg">
        <div class="card-header text-white text-center" style="background-color: indigo;">
          <h2 class="mb-0" >Create a New Post</h2>
        </div>
        <div class="card-body">
          <form action="/submit" method="POST" class="form-container">
            <div class="mb-3">
              <label for="title" class="form-label fw-bold">Title</label>
              <input type="text" id="title" name="title" class="form-control" required placeholder="Enter post title">
            </div>
            <div class="mb-3">
              <label for="Author" class="form-label fw-bold">Author</label>
              <input type="text" id="Author" name="Author" class="form-control" required placeholder="Your name">
            </div>
            <div class="mb-3">
              <label for="content" class="form-label fw-bold">Content</label>
              <textarea name="content" id="content" class="form-control text-content" rows="6" required placeholder="Write your content here"></textarea>
            </div>
            <div class="mb-3">
              <label for="image" class="form-label fw-bold">Image URL</label>
              <input type="url" id="image" name="img_url" class="form-control" placeholder="Optional: Add an image URL">
            </div>
            <div class="text-center">
              <input type="submit" value="Create Post" class="btn btn-success px-4 py-2 submit-button">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include("partials/footer.ejs") %>