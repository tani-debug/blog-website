<%- include("partials/Header.ejs") %>

<section class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-lg">
        <% if (post.img_url) { %>
          <img src="<%= post.img_url %>" alt="Blog post image" class="card-img-top blog-img" style="max-height:350px; object-fit:cover;">
        <% } %>
        <div class="card-body">
          <h2 class="card-title mb-3"><%= post.title %></h2>
          <% if (post.Author) { %>
            <p class="text-secondary mb-2"><strong>by <%= post.Author %></strong></p>
          <% } %>
          <p class="card-text fs-5"><%= post.content %></p>
          <a href="/" class="btn btn-outline-primary mt-3">Back to All Posts</a>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include("partials/footer.ejs") %>