<%- include("partials/Header.ejs") %>

<!-- All Posts Section -->
<section class="container my-5">
  <h2 class="all-post">All Posts</h2>
  <div class="row created-posts justify-content-center">
    <% if (posts.length === 0) { %>
      <div class="col-12 text-center">
        <p class="fs-5 text-muted">No posts yet. Be the first to <a href="/post" class="btn btn-sm btn-primary ms-2">Create a Post</a>!</p>
      </div>
    <% } else { %>
      <% posts.forEach(post => { %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="post card h-100 shadow-sm">
            <% if (post.img_url) { %>
              <img src="<%= post.img_url %>" alt="Post Image" class="card-img-top blog-img" style="max-height: 200px; object-fit: cover;">
            <% } %>
            <div class="card-body d-flex flex-column">
              <h3 class="post-title card-title"><%= post.title %></h3>
              <p class="Author-post text-secondary mb-2"><strong>by <%= post.Author %></strong></p>
              <p class="post-content card-text"><%= post.content.length > 150 ? post.content.substring(0, 150) + '...' : post.content %></p>
              <a href="/post/<%= post._id %>" class="btn btn-outline-primary mt-auto">Read More</a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>
</section>

<%- include("partials/footer.ejs") %>


